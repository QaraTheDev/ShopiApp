<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="login_sign_in_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/input_layout_background_color</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="login_sign_in_input_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:drawablePadding">-30dp</item>
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColorHint">@color/input_layout_hint_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_sign_in_tittle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintVertical_bias">0.1</item>
    </style>

    <style name="profile_menu_buttons_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/profile_menu_text_color</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="home_toolbar_account_location_button_text_style">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#FF5B5B5B</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="home_search_text_style">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">#FF5B5B5B</item>
        <item name="android:textSize">9sp</item>
    </style>
</resources>